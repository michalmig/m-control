{
  "name": "m-control",
  "private": true,
  "version": "0.1.0",
  "description": "MichaÅ‚'s personal command center â€” monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace @m-control/core build && yarn workspace @m-control/mctl build",
    "lint": "yarn workspaces run lint",
    "format": "yarn workspaces run format",
    "typecheck": "yarn workspaces run typecheck",
    "dev": "yarn workspace @m-control/mctl dev",
    "clean": "find . -name 'dist' -not -path '*/node_modules/*' -type d | xargs rm -rf"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  }
}
